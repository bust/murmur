<murmur>
	<simulator>
        <!-- Activate or not simulation -->
        <enable>1</enable>

        <!-- Sound input for simulators -->
        <soundInput>
            <device>1</device>
            <nbChannels>1</nbChannels>
        </soundInput>
        
        <!-- Devices -->
        <devices>
            <device>
                <id>deviceEchoSimulator01</id>
                <nbLEDs>158</nbLEDs>
                <length>4.0</length>
            </device>
<!--
            <device>
                <id>deviceEchoSimulator02</id>
                <nbLEDs>158</nbLEDs>
                <length>2.0</length>
            </device>
-->
        </devices>
    </simulator>

    <!-- MadMapper -->
    <madmapper>stereolux.mad</madmapper>

    <!-- Raspberry -->
    <launchDevices>
        <ip>192.168.1.52</ip>
    </launchDevices>
</murmur>